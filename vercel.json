{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node@latest",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": "**"
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/api/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/v1/upload",
      "dest": "/api/index.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}